<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="70dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_account_circle_24_green" />

            <Button
                android:id="@+id/btnNome"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:hint="Nome"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@null"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal"
                android:src="@drawable/ic_baseline_account_circle_24_green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-30dp"
                android:text="Idade"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btnIdade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="48dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:hint="18 anos"
                android:background="@null"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textStyle="normal"
                android:textCursorDrawable="@drawable/color_cursor"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="280dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal"
                android:src="@drawable/ic_baseline_bloodtype_24"/>

            <TextView
                android:id="@+id/tvDisplayChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-30dp"
                android:text="Tipo Sanguíneo"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20dp"/>


            <Button
                android:id="@+id/btnSelectChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="52dp"
                android:hint="Listar"
                android:background="@null"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:textCursorDrawable="@drawable/color_cursor"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="350dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal"
                android:src="@drawable/ic_baseline_balance_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-30dp"
                android:text="Peso"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="48dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:hint="75 kg"
                android:background="@null"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textStyle="normal"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="420dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal"
                android:src="@drawable/ic_baseline_height_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-30dp"
                android:text="Altura"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAltura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="48dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:background="@null"
                android:hint="1,70 m"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="490dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal"
                android:src="@drawable/ic_baseline_block_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-30dp"
                android:text="Alergias"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAlergias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="48dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:background="@null"
                android:hint="Desconhecidas"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="560dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="570dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal"
                android:src="@drawable/ic_baseline_credit_card_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-30dp"
                android:text="Cartão SUS"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="48dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:background="@null"
                android:hint="1234567890"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="630dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="640dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal"
                android:src="@drawable/ic_baseline_card_membership_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-30dp"
                android:text="Cartão Plano de Saúde"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="48dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:background="@null"
                android:hint="1234567890"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="700dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="710dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal"
                android:src="@drawable/ic_baseline_email_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-30dp"
                android:text="Email"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="48dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:background="@null"
                android:hint="exemplo@gmail.com"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="770dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="780dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="fill_horizontal"
                android:src="@drawable/ic_baseline_contact_phone_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-30dp"
                android:text="Contatos de Emergência"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnContatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:layout_marginLeft="48dp"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:background="@null"
                android:hint="Mãe, Pai"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp"
                android:textStyle="normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="870dp">

            <Button
                android:id="@+id/btnExit"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn"
                android:gravity="center"
                android:text="Sair"
                android:textColor="#Ffffff"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>